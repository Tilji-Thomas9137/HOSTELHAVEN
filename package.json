{
  "name": "hostelhaven",
  "version": "1.0.0",
  "description": "HostelHaven - Smart Hostel Management System (MERN Stack)",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd admin/vite && npm start",
    "install-server": "cd backend && npm install",
    "install-client": "cd admin/vite && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build": "cd admin/vite && npm run build",
    "start": "cd backend && npm start"
  },
  "keywords": ["hostel", "management", "mern", "react", "node", "mongodb"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
